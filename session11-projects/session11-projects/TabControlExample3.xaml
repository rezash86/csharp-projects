<Window x:Class="session11_projects.TabControlExample3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session11_projects"
        mc:Ignorable="d"
        Title="TabControlExample3" Height="300" Width="350">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="2,5">
            <Button x:Name="btnPrevious" Click="btnPrevious_Click">Prev</Button>
            <Button x:Name="btnNext" Click="btnNext_Click">Next</Button>
            <Button x:Name="btnSelected" Click="btnSelected_Click">Selected</Button>
        </StackPanel>
        <TabControl x:Name="tcSample">
            <TabItem Header="General">
                <Label Content="Content goes here"></Label>
            </TabItem>
            <TabItem Header="Security"></TabItem>
            <TabItem Header="Details"></TabItem>
        </TabControl>
    </DockPanel>
</Window>
