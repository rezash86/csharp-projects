<Window x:Class="session7_projects.DockpanelExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session7_projects"
        mc:Ignorable="d"
        Title="DockpanelExample" Height="350" Width="525">
    <Grid>
        <DockPanel Background="LightCoral">
            <Button Content="Left" DockPanel.Dock="Left" Background="Wheat" FontSize="20"></Button>
            <Button Content="Right" DockPanel.Dock="Right"  Background="Yellow" FontSize="20"></Button>
            <Button Content="Top" DockPanel.Dock="Top"  Background="Wheat" FontSize="20"></Button>
            <Button Content="Bottom" DockPanel.Dock="Bottom"  Background="Yellow" FontSize="20"></Button>
            
            <Button Content="Fill" FontSize="20" Background="Red"/>
        </DockPanel>
    </Grid>
</Window>
