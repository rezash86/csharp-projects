<Window x:Class="session7_projects.WrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session7_projects"
        mc:Ignorable="d"
        Title="WrapPanel" Height="134" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <WrapPanel Orientation="Vertical" Grid.ColumnSpan="2" Margin="0,0,10,38">
            <Button Content="btn 1" Margin="5"></Button>
            <Button Content="btn 2" Margin="5"></Button>
            <Button Content="btn 3" Margin="5"></Button>
            <Button Content="btn 4" Margin="5"></Button>
        </WrapPanel>
    </Grid>
</Window>
