<Window x:Class="session10_projects.LabelExample2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session10_projects"
        mc:Ignorable="d"
        Title="LabelExample2" Height="300" Width="250">
    <StackPanel Margin="10">
        <Label x:Name="lblName" Target="{Binding ElementName=txtName}">
            <StackPanel>
                <Image Source="https://upload.wikimedia.org/wikipedia/commons/3/30/Googlelogo.png" Width="110" />
                <AccessText Text="_Name:"></AccessText>
            </StackPanel>
        </Label>
        <TextBox Name="txtName"></TextBox>
        <Label x:Name="lblEmail" Target="{Binding ElementName=txtEmail}">
            <StackPanel>
                <AccessText Text="_Email Name:"></AccessText>
            </StackPanel>
        </Label>
        <TextBox Name="txtEmail"></TextBox>
    </StackPanel>
</Window>
