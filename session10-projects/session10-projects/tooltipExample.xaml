<Window x:Class="session10_projects.tooltipExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session10_projects"
        mc:Ignorable="d"
        Title="tooltipExample" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Height="40" Width="100" Content="Exit" Margin="40" ToolTip="This is a tool button"></Button>

            <Button Height="40" Width="100" Margin="40">
                Save
                <Button.ToolTip>
                    <ToolTip Background="Red" Foreground="White">
                        Clicking will save the world
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            
            
        </StackPanel>
    </Grid>
</Window>
