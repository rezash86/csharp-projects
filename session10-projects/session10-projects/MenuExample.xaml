<Window x:Class="session10_projects.MenuExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session10_projects"
        mc:Ignorable="d"
        Title="MenuExample" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New..."></MenuItem>
                <MenuItem Header="Open..."></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit"></MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Large Font" IsCheckable="True"></MenuItem>
                <MenuItem Header="High contrast" IsCheckable="True"></MenuItem>
                <MenuItem Header="Full Screen" IsCheckable="True"></MenuItem>
            </MenuItem>
            <MenuItem Header="Print">
                <MenuItem Header="Printer">
                    <MenuItem.Icon>
                        <Ellipse Fill="red" Width="10" Height="10"></Ellipse>
                    </MenuItem.Icon>
                </MenuItem>
                    
                <MenuItem Header="To PDF..."/>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
