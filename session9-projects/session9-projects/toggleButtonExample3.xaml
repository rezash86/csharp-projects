<Window x:Class="session9_projects.toggleButtonExample3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session9_projects"
        mc:Ignorable="d"
        Title="toggleButtonExample3" Height="300" Width="500">
    <Grid>
        <StackPanel>
            <ToggleButton x:Name="tb" Content="Toggle" 
                      Checked="tb_Checked" Unchecked="tb_Unchecked_1"
                      HorizontalAlignment="Center" Margin="20" Width="200">
            </ToggleButton>
            <TextBlock x:Name="textResult" HorizontalAlignment="Center" FontSize="25" Margin="20" Width="200" Background="LightCoral"></TextBlock>

        </StackPanel>
    </Grid>
</Window>
