<Window x:Class="session9_projects.GridExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session9_projects"
        mc:Ignorable="d"
        Title="GridExample" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="142*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="LightPink" Grid.Row="1" Grid.Column="2"></Rectangle>
        <Label Grid.Row="1" Grid.Column="1" Width="50" Content="Hello !!" Background="Wheat" Margin="20"></Label>
        <Ellipse Grid.Row="2" Fill="Red" Grid.Column="0" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
