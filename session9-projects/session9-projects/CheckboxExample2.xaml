<Window x:Class="session9_projects.CheckboxExample2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session9_projects"
        mc:Ignorable="d"
        Title="CheckboxExample2" Height="140" Width="250">
    <!--Custom Content by using Run tag which is inline property-->
    <StackPanel Margin="10">
        <Label FontWeight="Bold">Application Options</Label>
        <CheckBox>
            <TextBlock>Enable feauture <Run Foreground="Green" FontWeight="Bold">ABC</Run> </TextBlock>
        </CheckBox>
        <CheckBox IsChecked="True" IsThreeState="True">
            <WrapPanel>
                <TextBlock>Enable feauture <Run FontStyle="Italic" FontWeight="Bold">XYZ</Run></TextBlock>
            </WrapPanel>
            
        </CheckBox>
        <CheckBox>Enable feauture WWW</CheckBox>
    </StackPanel>
</Window>
