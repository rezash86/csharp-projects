<Window x:Class="session9_projects.CheckboxExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session9_projects"
        mc:Ignorable="d"
        Title="CheckboxExample" Height="350" Width="500">
    <Grid>
        <CheckBox x:Name="chChoc" Content="Extra Chocolate" Unchecked="chChoc_Unchecked" Checked="chChoc_Checked" HorizontalAlignment="Left" Margin="5,60,0,-60"></CheckBox>
        <CheckBox x:Name="chSugar" Content="No Sugar" Unchecked="chSugar_Unchecked" Checked="chSugar_Checked" HorizontalAlignment="Left" Height="319" VerticalAlignment="Bottom" Margin="125,0,0,-60"></CheckBox>

        <Label x:Name="lable1" HorizontalAlignment="Right" VerticalAlignment="Top" Height="50" Width="282"></Label>
        <Label x:Name="lable2" HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Width="182"></Label>
    </Grid>
</Window>
