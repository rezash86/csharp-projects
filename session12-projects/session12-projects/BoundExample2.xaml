<Window x:Class="session12_projects.BoundExample2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session12_projects"
        mc:Ignorable="d"
        Title="BoundExample2" Height="130" Width="280">
    <StackPanel Margin="15">
        <WrapPanel>
            <TextBlock Text="Window Title: "></TextBlock>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Width="150"></TextBox>
        </WrapPanel>
        <WrapPanel Margin="0,10,0,0">
            <TextBlock Text="Window Dimension: "></TextBlock>
            <TextBox Text="{Binding Width}" Width="50"></TextBox>
            <TextBlock Text=" x "></TextBlock>
            <TextBox Text="{Binding Height}" Width="50"></TextBox>
        </WrapPanel>
    </StackPanel>
</Window>
