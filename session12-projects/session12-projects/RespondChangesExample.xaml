<Window x:Class="session12_projects.RespondChangesExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session12_projects"
        mc:Ignorable="d"
        Title="RespondChangesExample" Height="150" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
            <Button x:Name="btnAddUser" Click="btnAddUser_Click">Add User</Button>
            <Button x:Name="btnChangeUser" Click="btnChangeUser_Click">Change User</Button>
            <Button x:Name="btnDeletUser" Click="btnDeletUser_Click">Delete User</Button>
        </StackPanel>
        <ListBox Name="lbUsers" DisplayMemberPath="Name"></ListBox>
    </DockPanel>
</Window>
