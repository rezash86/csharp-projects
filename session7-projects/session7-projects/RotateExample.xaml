<Window x:Class="session7_projects.RotateExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session7_projects"
        mc:Ignorable="d"
        Title="RotateExample" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Background="Beige" Height="25" Width="100">One</Button>
            <Button Background="Beige" Height="25" Width="100">

                <Button.LayoutTransform>
                    <RotateTransform Angle="6"/>
                </Button.LayoutTransform>
                Two
            </Button>
        </StackPanel>

        

    </Grid>
</Window>
