<Window x:Class="session7_projects.CanvasExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session7_projects"
        mc:Ignorable="d"
        Title="CanvasExample" Height="161.167" Width="320.333">
    <Canvas>
        <Button Background="Yellow" Canvas.Top="20" Canvas.Left="20" 
                Content="Top / left" Panel.ZIndex="40"></Button>
        <Button Background="Red" Canvas.Top="20" Canvas.Left="20" 
                Content="Top / Right" Panel.ZIndex="30"></Button>
        <Button Background="Yellow" Canvas.Bottom="20" Canvas.Left="20" 
                Content="bottom / Left"></Button>
        <Button Background="Yellow" Canvas.Bottom="20" Canvas.Right="20" 
                Content="bottom / Right"></Button>
    </Canvas>
</Window>
