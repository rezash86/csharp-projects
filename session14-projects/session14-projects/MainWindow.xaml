<Window x:Class="session14_projects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:session14_projects"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <!--<ListView Margin="10" Name="lvSample"></ListView>-->
        <ListView Margin="10" Name="lvSampleDataTemplate">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="Name := " />
                        <TextBlock Text="{Binding Name}" Background="Coral" FontWeight="Bold" Margin="0,0,5,0"></TextBlock>
                        <TextBlock Text="Age := " />
                        <TextBlock Text="{Binding Age}" Background="Coral" FontWeight="Bold" Margin="0,0,5,0"></TextBlock>
                        <TextBlock Text="email =>"/>
                        <TextBlock Text="{Binding Mail}" Background="Aqua" FontStyle="Italic"></TextBlock>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
